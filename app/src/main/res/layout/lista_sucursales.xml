<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/mapas_list" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Nombre_Sucursal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fuzzy_regular"
                    android:text="nombre"
                    android:textColor="@color/neon_yellow"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/Direccion_Sucursal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fuzzy_regular"
                    android:text="Direccion"
                    android:textColor="@color/neon_yellow"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/Telefono_Sucursal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fuzzy_regular"
                    android:text="Telefono"
                    android:textColor="@color/neon_yellow"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/Latitud_Sucursal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/Longitud_Sucursal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="TextView" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>